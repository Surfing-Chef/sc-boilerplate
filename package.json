{
  "name": "bourbon-chef",
  "version": "1.7.0",
  "description": "A Sass, Bourbon and NPM Script build system for HTML builds.",
  "main": "index.php",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
    "serve-dev": "live-server builds/development",
    "prod-setup": "mkdirp builds/production/js",
    "start": "npm run serve-dev",
    "prestart": "npm run prod-setup"
    "start": "npm-run-all --parallel dev:*",
    "dev:serve-dev": "live-server builds/dev",
    "dev:sass-dev": "node-sass --watch --output-style expanded --source-map true process/scss/style.scss --output builds/dev/css",
    "dev:js-transform": "babel process/js/**/*.js --watch --out-file builds/dev/js/script.js --source-maps",
    "build": "npm-run-all  prod:*",
    "prod:setup": "mkdirp builds/prod/js",
    "prod:sass-dev": "node-sass --output-style compressed process/scss/style.scss --output builds/prod/css",
    "prod:js-uglify": "uglifyjs builds/dev/js/script.js --compress --mangle --output builds/prod/js/script.js",
    "prod:html-minify": "html-minifier --collapse-whitespace builds/dev/index.html > output builds/prod/index.html",
    "prod:img-compress": "imagemin builds/dev/images/**/*.* --out-dir=builds/prod/img/ --plugin=jpeg-recompress --plugin-pngquant"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Surfing-Chef/Bourbon.git"
  },
  "keywords": [
    "gulp",
    "bourbon",
    "bitters",
    "neat"
  ],
  "author": "Surfing-Chef",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Surfing-Chef/Bourbon/issues"
  },
  "homepage": "https://github.com/Surfing-Chef/Bourbon#readme",
  "devDependencies": {
    "live-server": "^1.2.0",
    "mkdirp": "^0.5.1"
  }
}
